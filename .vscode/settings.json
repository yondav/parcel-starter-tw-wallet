{
  // eslint --fix on save
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  // reinforce editorConfig preferences
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.encoding": "utf8",
  "files.eol": "\n"
}
